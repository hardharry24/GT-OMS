@{
    ViewBag.TabTitle = "Update Job Products";
    ViewBag.Title = "JobProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GT_Order_Monitoring_System.Entity.vw_job_product_customer
<div class="row">
    <div class="col-xl-12">
        <div class="breadcrumb-holder">
            <h1 class="main-title float-left">Update Job Products</h1>
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item">Product</li>
                <li class="breadcrumb-item active">Update Job Products</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-5">
            <div class="card-header">
                <a href="/Job/JobProduct"><i class="fa fa-reply" aria-hidden="true"></i> Back</a>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Job", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label>Customer &nbsp;</label>
                                    @Html.TextBoxFor(m => m.customer_name, new { @class = "form-control", @readonly = "true" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Code &nbsp;</label>
                                    @Html.TextBoxFor(m => m.code, new { @class = "form-control", @readonly = "true" })
                                </div>
                                <div class="col-sm-6">
                                    <label>Product Code &nbsp;</label>
                                    @Html.TextBoxFor(m => m.prod_code, new { @class = "form-control", @readonly = "true" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label>Description &nbsp;</label>
                                    @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Unit Price &nbsp;</label>
                                    @Html.TextBoxFor(m => m.unit_price, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01" })
                                </div>
                                <div class="col-sm-6">
                                    <label>Unit Priceth &nbsp;</label>
                                    @Html.TextBoxFor(m => m.unit_priceth, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Unit Pricepck &nbsp;</label>
                                    @Html.TextBoxFor(m => m.unit_pricepck, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01" })
                                </div>
                                <div class="col-sm-6">
                                    <label>Unit Pricekg &nbsp;</label>
                                    @Html.TextBoxFor(m => m.unit_pricekg, "{0:n2}", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Date Last Order&nbsp;</label>
                                    @Html.TextBoxFor(m => m.datelast_order, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-6">
                                    <label>Number of Days Inaactive &nbsp;</label>
                                    @Html.TextBoxFor(m => m.noofdays_inactive, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Status&nbsp;</label>
                                    @Html.DropDownListFor(m => m.status, new SelectList(new List<Object> { new { value = "Active", text = "Active" }, new { value = "Inactive", text = "Inactive" } }, "value", "text"), new { @class = "form-control" })
                                </div>
                                <div class="col-sm-6">
                                    <label>Category &nbsp;</label>
                                    @Html.DropDownListFor(m => m.plastic_category, new SelectList(new List<Object> { new { value = "Plain", text = "Plain" }, new { value = "Printed", text = "Printed" } }, "value", "text"), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <input class="btn btn-success" type="submit" name="Submit" value="UPDATE" />
                                </div>
                            </div>
                            @if (ViewBag.errorMessage != "")
                            {
                                <div class="alert @(ViewBag.errorCode == "1" ? "alert-success": "alert-danger")">@ViewBag.errorMessage</div>
                            }
                            @* Hidden *@
                            @Html.HiddenFor(m => m.customer_id)
                            @Html.HiddenFor(m => m.id)
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>