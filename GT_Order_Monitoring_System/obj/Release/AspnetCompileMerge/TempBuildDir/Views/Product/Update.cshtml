@{
    ViewBag.TabTitle = "Update Commercial Products";
    ViewBag.Title = "CommercialProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GT_Order_Monitoring_System.Entity.tbl_commercial_product
<div class="row">
    <div class="col-xl-12">
        <div class="breadcrumb-holder">
            <h1 class="main-title float-left">Update Commercial Products</h1>
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item">Product</li>
                <li class="breadcrumb-item active">Update Products</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-5">
            <div class="card-header">
                <a href="/Product/CommercialProducts"><i class="fa fa-reply" aria-hidden="true"></i> Back</a>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="col-lg-12">
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label>Code &nbsp;</label>
                                <span id="errortxt"></span>
                                @Html.TextBoxFor(m => Model.code, new { @class = "form-control", @required = "true", @readonly = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label>Description &nbsp;</label>
                                @Html.TextBoxFor(m => Model.description, new { @class = "form-control", @required = "true", @id = "description" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Price per PC &nbsp;</label>
                                @Html.TextBoxFor(m => Model.unit_price, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01", @required = "true", })
                            </div>
                            <div class="col-sm-6">
                                <label>Price per TH &nbsp;</label>
                                @Html.TextBoxFor(m => Model.unit_priceth, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01", @required = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Price per PCK &nbsp;</label>
                                @Html.TextBoxFor(m => Model.unit_pricepck, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01", @required = "true" })
                            </div>
                            <div class="col-sm-6">
                                <label>Price per KG &nbsp;</label>
                                @Html.TextBoxFor(m => Model.unit_pricekg, "{0:n2}", new { @class = "form-control", @type = "number", @step = ".01", @required = "true" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => Model.id, "{0:n2}", new { @class = "form-control", @type = "text", @hidden = "true" })
                            </div>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => Model.code, "{0:n2}", new { @class = "form-control", @type = "text", @hidden = "true" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => Model.category, "{0:n2}", new { @class = "form-control", @type = "text", @hidden = "true" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <input class="btn btn-success" type="submit" name="Submit" value="UPDATE" />
                        </div>
                        @if (ViewBag.errorMessage != "")
                        {
                            <div class="alert @(ViewBag.errorCode == "1" ? "alert-success": "alert-danger")">@ViewBag.errorMessage</div>
                        }

                    </div>
                }

            </div>
        </div>

    </div>
</div>



