
@{
    ViewBag.TabTitle = "Update User";
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using GT_Order_Monitoring_System.Entity;
@model GT_Order_Monitoring_System.Entity.tbl_user
<div class="row">
    <div class="col-xl-12">
        <div class="breadcrumb-holder">
            <h1 class="main-title float-left"><i class="fa fa-edit"></i> Update User</h1>
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item">User</li>
                <li class="breadcrumb-item active">Update New User</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-5">
            <div class="card-header">
                <a href="/User/UserManagement"><i class="fa fa-reply" aria-hidden="true"></i> Back</a>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "User", FormMethod.Post))
                {
                    <div class="col-lg-12">
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Full name (required)</label>
                                @Html.TextBoxFor(m => m.name, new { @class = "form-control", @required = "true" })
                            </div>
                            <div class="col-sm-6">
                                <label>User Code (required)</label>
                                @Html.TextBoxFor(m => m.code, new { @class = "form-control", @required = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Access Level</label>
                                @Html.DropDownListFor(m => m.acc_level, new SelectList(new List<Object> { new { value = "User", text = "User" }, new { value = "Admin", text = "Admin" } }, "value", "text"), new { @class = "form-control" })
                            </div>
                            <div class="col-sm-6">
                                <label>Access</label>
                                @Html.DropDownListFor(m => m.access, new SelectList(new List<Object> {
                               new { value = "1", text = "1" },
                               new { value = "2", text = "2" },
                               new { value = "3", text = "3" },
                               new { value = "4", text = "4" }}, "value", "text"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Password (required)</label>
                                @Html.TextBoxFor(m => m.password, new { @class = "form-control", @type = "password", @required = "true" })
                            </div>
                            <div class="col-sm-6">
                                <label>Confirm Password (required)</label>
                                <input class="form-control" name="password2" type="password" value="@(ViewBag.password2 != ""? ViewBag.password2: "")" required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <input class="btn btn-success" type="submit" name="Submit" value="UPDATE" />
                            </div>
                        </div>
                        @if (ViewBag.errorMessage != "")
                        {
                            <div class="alert @(ViewBag.errorCode == "1" ? "alert-success" : "alert-danger")">@ViewBag.errorMessage</div>
                        }
                        @* Hidden *@
                        <input type="text" name="a_oldCode" value="@Model.code" hidden />
                    </div>
                }
            </div>
        </div>
    </div>
</div>



