@model GT_Order_Monitoring_System.Models.MyModel

<div class="form-group row">
    <div class="col-sm-12 row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">JO #</label>
                <input type="text" name="name" class="form-control" value="PJ-@Model.JobOrderLaminated.jo_no" readonly />
            </div>
        </div>

        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">PO #</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.po_no" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">JO Date</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.jo_date" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Delivery Date</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.delivery_date" readonly />
            </div>
        </div>
    </div>
    <div class="col-sm-12 row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Customer</label>
                <input type="text" name="name" class="form-control" value="@Model.Customer.customer_name" readonly />
            </div>
        </div>

        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Production Code</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.prod_code" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Description</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.description" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Order No</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.created_by" readonly />
            </div>
        </div>
    </div>
    <div class="col-sm-12 row">
        <div class="col-sm-2">
            <div class="form-group">
                <label class="font-weight-bold">Plastic Color</label>
                <input type="text" name="name" class="form-control" value="N/A" readonly />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-bold center">Fold (mm)</label>
                <div class="col-sm-12 row">
                    <div class="col-4">
                        <div class="form-group">
                            <label>Bottom</label>
                            <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.bottom_fold" readonly />
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Left</label>
                            <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.left_fold" readonly />
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Right</label>
                            <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.right_fold" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold center">Size (mm)</label>
                <div class="col-sm-12 row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Width</label><br />
                            <input type="text" name="name" class="form-control" value="N/A" readonly />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Height</label><br />
                            <input type="text" name="name" class="form-control" value="N/A" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold center">Thickness (π)</label>
                <div class="col-sm-12 row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Single</label><br />
                            <input type="text" name="name" class="form-control" value="N/A" readonly />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Tube</label><br />
                            <input type="text" name="name" class="form-control" value="N/A" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Polymer Type</label>
                <input type="text" name="name" class="form-control" value="N/A" readonly />
            </div>
        </div>

        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Plastic Color</label>
                <input type="text" name="name" class="form-control" value="N/A" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Weight</label>
                <input type="text" name="name" class="form-control" value="N/A" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Checking Based</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.checking_based" readonly />
            </div>
        </div>
    </div>
    <div class="col-sm-12 row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Plastic Type</label>
                <input type="text" name="name" class="form-control" value="N/A" readonly />
            </div>
        </div>

        <div class="col-sm-2">
            <div class="form-group">
                <label class="font-weight-bold">Plastic Category</label>
                <input type="text" name="name" class="form-control" value="N/A" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Print Style</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.print_style" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Plate No</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.plate_no" readonly />
            </div>
        </div>
    </div>
    <div class="col-sm-12 row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">No Color</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.no_of_colors" readonly />
            </div>
        </div>

        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Front Print Color</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.front_print" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Back Print Color</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.back_print" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Plate No</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.plate_no" readonly />
            </div>
        </div>
    </div>
    <div class="col-sm-12 row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Ordered QTY</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.ordered_qty" readonly />
            </div>
        </div>

        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Order Status</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.order_status" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Unit</label>
                <input type="text" name="name" class="form-control" value="@Model.JobOrderLaminated.unit" readonly />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-bold">Remarks</label>
                <input class="form-control" type="text" name="name" value="@Model.JobOrderLaminated.remarks" readonly />
            </div>
        </div>
    </div>
</div>




