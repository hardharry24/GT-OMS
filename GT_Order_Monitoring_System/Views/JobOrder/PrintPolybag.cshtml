<script type="text/javascript">
    function onAction(id, action)
    {
        swal({
            title: "Confirmation",
            text: "Are you sure you want to " + action + " this record?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
            closeOnClickOutside: false
        })
        .then((willDelete) => {
            if (willDelete) {
                var obj = new FormData();
                obj.append("id",id);
                obj.append("action",action);

                var url = "/JobOrder/PrintPolybag/";
                var request = new XMLHttpRequest();
                // POST to any url
                request.open('POST', url, false);
                request.send(obj);


                window.location.href = "/JobOrder/PrintPolybag/"+id;
                
            }
        });
    }
</script>