                <tr style="text-align: center;">
                    <td style="width: 10%;"><label class="font-weight-bold">@Model.JobOrderPolybags.thickness_tube</label></td>
                    <td style="width: 10%;"><input type="checkbox" name="name" @(Model.JobOrderPolybags.plastic_type == "TUBE" || Model.JobOrderPolybags.plastic_type == "TUBE W/ FOLD" ? "checked" : "" ) disabled/> Tube</td>
