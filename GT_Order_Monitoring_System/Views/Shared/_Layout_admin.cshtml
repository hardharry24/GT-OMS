<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title | GT Order Monitoring System </title>
    <meta name="description" content="Dashboard | GT Order Monitoring System">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="www.GTodermonitoring">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico">

    <!-- Bootstrap CSS -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <!-- Font Awesome CSS -->
    <link href="~/Content/assets/font-awesome/css/all.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet" type="text/css" />

    <!-- BEGIN CSS for this page -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/chart.js/Chart.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/datatables/datatables.min.css" />
    <!-- END CSS for this page -->
</head>
<body class="adminbody">
    <div id="main">
        <!-- top bar navigation -->
        <div class="headerbar">

            <!-- LOGO -->
            <div class="headerbar-left">
                <a href="/Home/Index" class="logo">
                    <img alt="Logo" src="~/Content/assets/images/logo.png" />
                    <span>ORDER MONITORING SYSTEM </span>
                </a>
            </div>
           
            <nav class="navbar-custom">
           
                <ul class="list-inline menu-left mb-0">
                    <li class="float-left">
                        <button class="button-menu-mobile open-left">
                            <i class="fas fa-bars"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
      <br />
        @RenderBody()
        <!-- END content-page -->
    </div>
        <!-- End Navigation -->
    <br />
    <hr />
        <footer>
            <center>
                <p>&copy; @DateTime.Now.Year - GT Order Monitoring System</p>
            </center>
        </footer>

        <script src="~/Content/assets/js/modernizr.min.js"></script>
        <script src="~/Content/assets/js/jquery.min.js"></script>
        <script src="assets/js/moment.min.js"></script>

        <script src="~/Content/assets/js/popper.min.js"></script>
        <script src="~/Content/assets/js/bootstrap.min.js"></script>

        <script src="~/Content/assets/js/detect.js"></script>
        <script src="~/Content/assets/js/fastclick.js"></script>
        <script src="~/Content/assets/js/jquery.blockUI.js"></script>
        <script src="~/Content/assets/js/jquery.nicescroll.js"></script>

        <!-- App js -->
        <script src="~/Content/assets/js/admin.js"></script>

        <!-- BEGIN Java Script for this page -->
        <script src="~/Content/assets/plugins/chart.js/Chart.min.js"></script>
        <script src="~/Content/assets/plugins/datatables/datatables.min.js"></script>

        <!-- Counter-Up-->
        <script src="~/Content/assets/plugins/waypoints/lib/jquery.waypoints.min.js"></script>
        <script src="~/Content/assets/plugins/counterup/jquery.counterup.min.js"></script>

        <!-- dataTabled data -->
        <script src="~/Content/assets/data/data_datatables.js"></script>

        <!-- Charts data -->
        <script src="~/Content/assets/data/data_charts_dashboard.js"></script>
        <script>
            function onConfirmLogout() {
                if (confirm("Are you sure you want to logout?")) {
                    window.location.href = "/Home/Logout";
                }
            }
        </script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
     </body>
</html>